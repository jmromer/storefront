<%#= javascript_pack_tag "products_index" %>

<h1>All products</h1>

<% @products.each do |product| %>
    <div>
        <% if product.image.attached? %>
            <%= image_tag product.image %>
        <% else %>
            <%= image_tag default_product_image %>
        <% end %>
        <div>
            <%= product.name %>
        </div>
        <div>
            <%= number_to_currency(product.price) %>
        </div>
        <div>
            <%= product.rating %>
        </div>
    </div>
<% end %>
