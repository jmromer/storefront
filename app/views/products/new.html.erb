<h1> New Product </h1>

<% flash.each do |type, msg| %>
    <% if type == :alert %>
    <div class="alert alert-error">Errors: <%= msg %></div>
    <% else %>
    <div class="alert alert-info"><%= msg %></div>
    <% end %>
<% end %>

<%= form_with model: Product.new do |f| %>
    <div>
        <%= f.label :name, "Name" %>
        <%= f.text_field :name %>
    </div>

    <div>
        <%= f.label :price, "Price" %>
        <%= f.text_field :price %>
    </div>

    <div>
        <%= f.label :rating, "Rating" %>
        <%= f.select :rating, options_for_select(1..5, 1..5) %>
    </div>


    <div>
        <%= f.label :image %>
        <%= f.file_field :image %>
    </div>

    <%= f.submit %>
<% end %>
